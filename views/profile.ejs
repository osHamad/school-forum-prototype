<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <link href="/css/styles.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
        <title><%=info.name%>'s Profile</title>
    </head>
    <body class="sb-nav-fixed">
        <%-include('./components/_topNav.ejs')%>
        <div id="layoutSidenav">
            <%-include('./components/_sideNav.ejs')%>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <div class="card mb-5 mt-3 border-dark">
                            <div class="card-body text-center">
                                <h1><%=info.name%></h1>
                            </div>
                            <div class="card-footer">
                                <div class="row text-muted">
                                    <div class="text-center col-md-4 mb-2"><h5>Grade <%=info.grade%></h5></div>
                                    <div class="text-center col-md-4 mb-2"><h5>Joined on <%=info.dateJoined.toDateString()%></h5></div>
                                    <div class="text-center col-md-4 mb-2"><h5><%=stats.points%> Points</h5></div>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-evenly mb-5">
                            <div class="col-md-4">
                                <div class="card text-white bg-success mb-3 text-center">
                                <div class="card-header"><h4>Questions Asked</h4></div>
                                <div class="card-body">
                                  <h1 class="card-text"><%=stats.asked%></h1>
                                </div>
                            </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card text-white bg-primary mb-3 text-center">
                                <div class="card-header"><h4>Questions Answered</h4></div>
                                <div class="card-body">
                                  <h1 class="card-text"><%=stats.answered%></h1>
                                </div>
                            </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="card text-white bg-danger mb-3 text-center">
                                <div class="card-header"><h4>Answers Verified</h4></div>
                                <div class="card-body">
                                  <h1 class="card-text"><%=stats.verified%></h1>
                                </div>
                            </div>
                            </div>
                            
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                              <div class="card border-primary mb-2">
                                <div class="card-header"><h4>Recent Questions</h4></div>
                                <div class="card-body">
                                    <% qna.questions.forEach(question => { %>
                                        <a class="a-no-style" href="/questions/<%=question._id%>">
                                            <div class="card mb-1">
                                                <div class="card-body">
                                                    <div class="text-muted">
                                                        <p class="d-inline-block fw-bold"><%=question.questionBody.category%></p>
                                                        <p class="d-inline-block">•</p>
                                                        <p class="d-inline-block"><%=question.questionInfo.dateAsked.toDateString()%></p>
                                                        <p class="d-inline-block">•</p>
                                                        <p class="d-inline-block"><%=question.questionBody.answers.length%> answers</p>
                                                    </div>
                                                    <div class="overflow-hidden text-nowrap fw-bold"><h6><%=question.questionBody.title%></h6></div>
                                                </div>
                                            </div>
                                        </a>
                                    <% }) %>
                                </div>
                              </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-primary">
                                    <div class="card-header"><h4>Recent Answers</h4></div>
                                    <div class="card-body">
                                        <% qna.answers.forEach(answer => { %>
                                            <a class="a-no-style" href="/questions/<%=answer.answerInfo.parentQuestion%>">
                                                <div class="card mb-1">
                                                <div class="card-body">
                                                    <div class="text-muted">
                                                        <p><%=answer.answerInfo.dateAnswered.toDateString()%></p>
                                                    </div>
                                                    <div class="overflow-hidden text-nowrap fw-bold"><h6><%=answer.answerBody.details%></h6></div>
                                                </div>
                                            </div>
                                            </a>
                                        <% }) %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    
                </main>
                <%-include('./components/_sideNav.ejs')%>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    </body>
</html>
